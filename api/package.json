{
  "name": "vending-machine-api",
  "version": "1.0.0",
  "description": "Vending Machine API for MVP",
  "main": "main.ts",
  "scripts": {
    "start": "npm run build && NODE_ENV=production node ./dist/app.js",
    "start:dev": "NODE_ENV=development ./node_modules/.bin/nodemon -r ./set-aliases.js --exec './node_modules/.bin/ts-node' src/app.ts",
    "build": "tsc",
    "typeorm": "ts-node -r ./set-aliases.js ./node_modules/.bin/typeorm",
    "seed": "ts-node -r ./set-aliases.js ./node_modules/typeorm-seeding/dist/cli.js seed",
    "make:migration": "npm run typeorm -- migration:create",
    "migrate": "npm run typeorm -- migration:run -d ormconfig.ts",
    "test": "ts-mocha -p ./tsconfig.json test/**/*.spec.ts"
  },
  "directories": {
    "test": "./test/**.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baitur/vending-machine"
  },
  "author": "Yerlan Baiturinov <baitur.erlan@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^3.1.1",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.2",
    "event-dispatch": "^0.4.1",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.5.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.10",
    "typeorm-seeding": "^1.6.1",
    "typeorm-simple-query-parser": "^1.0.16",
    "typeorm-typedi-extensions": "^0.4.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.7.21",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "jest": "^29.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.3"
  }
}
